/* 隐藏scroll-view滚动条*/

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

/*header*/

.dn-header {
  width: 100%;
  padding-top: 34rpx;
  /* box-shadow: 0 15rpx 10rpx -15rpx #f2f2f2; */
  box-sizing: border-box;
  background: #fff;
  position: fixed;
  z-index: 1000;
}

.dn-header-top, .dn-header-bottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 26rpx;
  color: #333;
}

.dn-top-item {
  height: 26rpx;
  line-height: 26rpx;
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.dn-topitem-active {
  position: relative;
  font-weight: bold;
}

.dn-topitem-active::after {
  content: '';
  position: absolute;
  width: 44rpx;
  height: 6rpx;
  background: #5677fc;
  border-radius: 6rpx;
  bottom: -10rpx;
  left: 50%;
  -webkit-transform: translateX(-50%);
  transform: translateX(-50%);
}

.dn-price-arrow {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 20rpx;
  margin-left:6rpx;

}

.dn-arrow {
  line-height: 12px !important;
  padding: 0 !important;
  display: block !important;
  position: relative;
}

.dn-arrow-up {
  top: 3px;
}

.dn-arrow-down {
  top: -2px;
}

.dn-header-bottom {
  margin-top: 56rpx;
  height: 108rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  align-items: flex-start;
  overflow: hidden;
}

.dn-bottom-text {
  line-height: 24rpx;
}

.dn-bottom-item {
  flex: 1;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 18rpx 12rpx;
  border-radius: 40rpx;
  box-sizing: border-box;
  background: #f2f2f2;
  margin-right: 20rpx;
  white-space: nowrap;
}

.dn-bottom-item:last-child {
  margin-right: 0;
}

.dn-btmItem-active {
  padding-bottom: 60rpx;
  border-bottom-left-radius: 0;
  border-bottom-right-radius: 0;
}

.text-bold {
  font-weight: bold;
}

.text-active {
  color: #5677fc;
}

.ml-3px {
  margin-left: 6rpx;
}


.v-middle {
  vertical-align: middle;
}

/*header*/

/*header 下拉选择*/

.dn-scroll-box {
  width: 100%;
  height: 480rpx;
  box-sizing: border-box;
  position: relative;
  z-index: 99;
  color: #fff;
  font-size: 30rpx;
  word-break: break-all;
}

.dn-drop-item {
  color: #333;
  height: 80rpx;
  font-size: 28rpx;
  padding: 20rpx 40rpx 20rpx 40rpx;
  box-sizing: border-box;
  display: inline-block;
  width: 50%;
}

.dn-drop-btnbox {
  width: 100%;
  height: 100rpx;
  position: absolute;
  left: 0;
  bottom: 0;
  box-sizing: border-box;
  display: flex;
}

.dn-drop-btn {
  width: 50% !important;
  border-radius: 0 !important;
  font-size: 32rpx !important;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  border: 0;
}


/*header 下拉选择*/

.top-dropdown {
  margin-top: 360rpx;
  padding: 0 40rpx;
  box-sizing: border-box;
}

.dn-share-box {
  padding: 0 50rpx;
  box-sizing: border-box;
}

.dn-drop-input-box {
  padding: 50rpx;
  box-sizing: border-box;
}

.dn-animation {
  transform: rotate(0deg);
  transition: all 0.2s;
}

.dn-animation-show {
  transform: rotate(180deg);
}

.dn-selected-list {
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  transform: translateZ(0);
}

.h-200px {
  height: 400rpx;
}

.dn-selected-item {
  display: flex;
  align-items: center;
  padding: 26rpx 30rpx !important;
}

.dn-share {
  background: #e8e8e8;
  position: relative;
  padding-bottom: env(safe-area-inset-bottom);
  /* padding-bottom: 150rpx; */
}

.dn-share-title {
  font-size: 26rpx;
  color: #7e7e7e;
  text-align: center;
  line-height: 26rpx;
  padding: 20rpx 0 50rpx 0;
}

.dn-share-top, .dn-share-bottom {
  box-sizing: content-box;
  width: 100%;
  height: 126rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  padding: 30rpx 20rpx 30rpx 30rpx;
}

.my-20-75 {
  margin-top: 40rpx;
  padding-bottom: 150rpx;
}

.dn-share-item {
  width: 126rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 24rpx;
}

.m-0 {
  margin: 0;
}

.dn-empty {
  margin-left: 18rpx;
  visibility: hidden;
}

.dn-share-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fafafa;
  height: 126rpx;
  width: 126rpx;
  border-radius: 32rpx;
}

.dn-share-text {
  font-size: 24rpx;
  color: #7e7e7e;
  line-height: 24rpx;
  padding: 20rpx 0;
}

.dn-btn-cancle {
  width: 100%;
  height: 100rpx;
  position: absolute;
  left: 0;
  bottom: 0;
  background: #f6f6f6;
  font-size: 36rpx;
  color: #3e3e3e;
  display: flex;
  align-items: center;
  justify-content: center;
  padding-bottom: env(safe-area-inset-bottom);
  box-sizing: content-box;
}

.dn-hover {
  background: rgba(0, 0, 0, 0.2);
}
