@import '/static/css/dnui.wxss';
page {
  background: #f5f6fa;
  height: 100%;
  overflow: hidden;
}

.dn-page {
  height: 100%;
  overflow: hidden;
}

.dn-scrollList {
  flex: 1;
}

/*searchbox*/



.dn-searchbox {
  width: 100%;
  height: 100rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.dn-search-input {
  width: 100%;
  height: 72rpx;
  background: #f5f6fa;
  border-radius: 36rpx;
  font-size: 30rpx;
  color: #a8abb8;
  display: flex;
  align-items: center;
  justify-content: center;
}

/*searchbox*/

.dn-indexed-list-bar {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  z-index: 9999;
  position: absolute;
  top: 132rpx;
  right: 0;
  padding-right: 10rpx;
  width: 44rpx;
  color: #555;
  font-weight: bold;
}

.dn-indexed-list-alert {
  position: absolute;
  z-index: 20;
  width: 120rpx;
  height: 120rpx;
  right: 90rpx;
  top: 50%;
  margin-top: -60rpx;
  border-radius: 24rpx;
  font-size: 50rpx;
  color: #fff;
  background-color: rgba(0, 0, 0, 0.65);
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0;
}

.dn-indexed-list-alert text {
  line-height: 50rpx;
}

.dn-footer {
  padding: 30rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  color: #999;
}

.dn-safearea-bottom {
  width: 100%;
  height: env(safe-area-inset-bottom);
}
