@import '/static/css/dnui.wxss';
page {
  color: #333;
  background: #fff;
}
.container{
  box-sizing: border-box;
  padding-bottom: 110rpx;
}
.dn-container{
  padding: 470rpx 30rpx 30rpx 30rpx;
}
#dn-video{
  width: 100%;
  height: 440rpx;
  position: fixed;
  left: 0;
  top: 0;
  object-fit: fill;
  z-index: 99999;
}

.dn-operateBox {
  display: flex;
  align-items: center;
  justify-content:space-around;
  padding: 60rpx 40rpx;
  box-sizing: border-box;
}

.dn-tagClass {
  width: 260rpx;
  font-size: 26rpx !important;
  display: flex;
  align-items: center;
  justify-content: center;
}

.dn-shareBtn {
  background: none;
  margin: 0 !important;
  padding: 0 !important;
  height:auto;line-height:0;
}


.dn-cmtTitle {
  font-size: 30rpx;
  font-weight: bold;
  position: relative;
}

.dn-cmtTitle::after {
  content: '';
  position: absolute;
  left: -18rpx;
  top: 18%;
  width: 6rpx;
  height: 64%;
  background: #5677fc;
}

