.container {
  padding-top: 120rpx;
}

.dn-notice-board {
  width: 100%;
  padding-right: 30rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  height: 60rpx;
  background: #fff8d5;
  display: flex;
  align-items: center;
  position: fixed;
  top: 0;
  z-index: 999;
}

.dn-icon-bg {
  background: #fff8d5;
  padding-left: 30rpx;
  position: relative;
  z-index: 10;
}

.dn-rolling-icon {
  margin-right: 12rpx;
}

.dn-scorll-view {
  flex: 1;
  line-height: 1;
  white-space: nowrap;
  overflow: hidden;
  color: #f54f46;
}
.dn-notice{
   transform: translateX(100%);
}
.dn-animation {
  -webkit-animation: tui-rolling 12s linear infinite;
  animation: tui-rolling 12s linear infinite;
}

@-webkit-keyframes tui-rolling {
  0% {
    transform: translateX(100%);
  }

  100% {
    transform: translateX(-170%);
  }
}

@keyframes tui-rolling {
  0% {
    transform: translateX(100%);
  }

  100% {
    transform: translateX(-170%);
  }
}

.dn-subject {
  padding: 100rpx 30rpx 30rpx 30rpx;
  box-sizing: border-box;
  font-size: 32rpx;
  font-weight: bold;
}

.dn-rolling-news {
  width: 100%;
  padding: 12rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-wrap: nowrap;
}

.dn-swiper {
  font-size: 28rpx;
  height: 50rpx;
  flex: 1;
}
.dn-swiper-item{
  display: flex;
  align-items: center
}

.dn-news-item {
  line-height: 28rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.dn-searchbox {
  padding: 60rpx 80rpx;
  box-sizing: border-box;
}

.dn-rolling-search {
  width: 100%;
  height: 70rpx;
  border-radius: 35rpx;
  padding: 0 40rpx 0 30rpx;
  box-sizing: border-box;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-wrap: nowrap;
  color: #999;
}
