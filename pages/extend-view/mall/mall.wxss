@import '/static/css/dnui.wxss';
page {
  background: #f7f7f7;
}

.container {
  padding-bottom: 100rpx;
  color: #333;
}

/*tabbar*/

.dn-tabbar {box-sizing:content-box;width:100%;position:fixed;display:flex;align-items:center;justify-content:space-between;z-index:99999;background:#fff;height:100rpx;left:0;bottom:0;padding-bottom:env(safe-area-inset-bottom);}
.dn-safearea-bottom {width:100%;height:env(safe-area-inset-bottom);}
.dn-tabbar::before {content:'';width:100%;border-top:1rpx solid #d9d9d9;position:absolute;top:0;left:0;-webkit-transform:scaleY(0.5);transform:scaleY(0.5);}
.dn-tabbar-item {flex:1;width:25%;display:flex;align-items:center;flex-direction:column;justify-content:space-between;font-size:24rpx;color:#666;height:80rpx;}


.scale8 {
  font-weight: bold;
  transform: scale(0.8);
  transform-origin: center 100%;
  line-height: 30rpx;
}



/*tabbar*/

.dn-header {
  width: 100%;
  height: 100rpx;
  padding: 0 30rpx 0 20rpx;
  box-sizing: border-box;
  background: var(--primary);
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 999;
}
.dn-header-banner {
  padding-top: 100rpx;
  box-sizing: border-box;
  background: var(--primary);
}

.dn-rolling-search {
  width: 100%;
  height: 60rpx;
  border-radius: 35rpx;
  padding: 0 40rpx 0 30rpx;
  box-sizing: border-box;
  background: #fff;
  display: flex;
  align-items: center;
  flex-wrap: nowrap;
  color: #999;
}

.dn-category {
  font-size: 24rpx;
  color: #333;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  margin: 0;
  margin-right: 22rpx;
  flex-shrink: 0;
}

.dn-category-scale {
  transform: scale(0.7);
  line-height: 24rpx;
}



.dn-swiper {
  font-size: 26rpx;
  height: 60rpx;
  flex: 1;
  padding-left: 12rpx;
}

.dn-swiper-item {
  display: flex;
  align-items: center;
}

.dn-hot-item {
  line-height: 26rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}



.dn-hot-search {
  color: #333;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
  box-sizing: border-box;
  position: relative;
  z-index: 2;
}

.dn-hot-tag {
  background: rgba(255, 255, 255, 0.4);
  padding: 10rpx 24rpx;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 24rpx;
  /* margin-left: 20rpx; */
}

.dn-banner-bg {
  display: flex;
  height: 180rpx;
  background: var(--primary);
  position: relative;
}

.dn-primary-bg {
  width: 50%;
  display: inline-block;
  height: 224rpx;
  border: 1px solid transparent;
  position: relative;
  z-index: 1;
  background: var(--primary);
}

.dn-route-left {
  transform: skewY(8deg);
}

.dn-route-right {
  transform: skewY(-8deg);
}

.dn-banner-box {
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
  position: absolute;
  /* overflow: hidden; */
  z-index: 99;
  bottom: -80rpx;
  left: 0;
}

.dn-banner-swiper {
  width: 100%;
  height: 240rpx;
  border-radius: 12rpx;
  overflow: hidden;
  transform: translateY(0);
}

.dn-slide-image {
  width: 100%;
  height: 240rpx;
  display: block;
}

.dn-banner-swiper .wx-swiper-dot {
  width: 8rpx;
  height: 8rpx;
  display: inline-flex;
  background: none;
  justify-content: space-between;
}

.dn-banner-swiper .wx-swiper-dot::before {
  content: '';
  flex-grow: 1;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 16rpx;
  overflow: hidden;
}

.dn-banner-swiper .wx-swiper-dot-active::before {
  background: #fff;
}

.dn-banner-swiper .wx-swiper-dot.wx-swiper-dot-active {
  width: 16rpx;
}

.dn-newitem {
  height: 200rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  background: #f5f2f9;
  position: relative;
  border-radius: 12rpx;
}



.dn-newtitle {
  line-height: 24rpx;
  word-break: break-all;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.dn-neworiginal {
  display: inline-block;
  color: #a0a0a0;
  text-decoration: line-through;
  padding-left: 12rpx;
  transform: scale(0.8);
  transform-origin: center center;
}
