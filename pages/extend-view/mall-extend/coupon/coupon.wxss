@import '/static/css/dnui.wxss';

.container {
  padding-bottom: env(safe-area-inset-bottom);
}

.dn-coupon-item-right {
  flex: 1;
  position: relative;
  z-index: 2;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  overflow: hidden;
}

.dn-coupon-content {
  width: 82%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.dn-coupon-title-box {
  display: flex;
  align-items: center;
}

.dn-coupon-btn {
  padding: 6rpx;
  background: #ffebeb;
  color: #e41f19;
  font-size: 25rpx;
  line-height: 25rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transform: scale(0.9);
  transform-origin: 0 center;
  border-radius: 4rpx;
  flex-shrink: 0;
}


.dn-coupon-title {
  width: 100%;
  font-size: 26rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.dn-coupon-rule {
  padding-top: 52rpx;
}

.dn-rule-box {
  display: flex;
  align-items: center;
  transform: scale(0.8);
  transform-origin: 0 100%;
}

.pb-3px {
  padding-bottom: 6rpx;
}

.dn-coupon-circle {
  width: 8rpx;
  height: 8rpx;
  background: rgb(160, 160, 160);
  border-radius: 50%;
}

.dn-coupon-text {
  font-size: 28rpx;
  line-height: 28rpx;
  font-weight: 400;
  white-space: nowrap;
}



.dn-coupon-radio {
  transform: scale(0.7);
  transform-origin: 100% center;
}

.dn-btn-box {
  position: absolute;
  width: 160rpx;
  height: 50rpx;
  right: 0rpx;
  bottom: 40rpx;
  z-index: 10;
}

.wx-radio-input {
  margin-right: 0 !important;
}