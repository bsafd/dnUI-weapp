	@import '/static/css/dnui.wxss';
  
  .container {
		padding-bottom: env(safe-area-inset-bottom);
	}

	.mt-8 {
		margin-top: 80rpx;
	}

	.dn-orderItem {
		margin-top: 20rpx;
		border-radius: 10rpx;
		overflow: hidden;
	}

	.dn-goodsTitle {
		width: 100%;
		font-size: 28rpx;
		display: flex;
		align-items: center;
		justify-content: space-between;
	}

	.dn-orderStatus {
		color: #888;
		font-size: 26rpx;
	}

	.dn-goodsItem {
		width: 100%;
		padding: 20rpx 30rpx;
		box-sizing: border-box;
		display: flex;
		justify-content: space-between;
	}

	.dn-goodsImage {
		width: 180rpx;
		height: 180rpx;
		display: block;
		flex-shrink: 0;
    margin-right:20rpx;
	}

	.dn-goodsCenter {
		flex: 1;
		padding: 20rpx 8rpx;
		box-sizing: border-box;
	}

	.dn-goodsName {
		max-width: 310rpx;
		word-break: break-all;
		overflow: hidden;
		text-overflow: ellipsis;
		display: -webkit-box;
		-webkit-box-orient: vertical;
		-webkit-line-clamp: 2;
		font-size: 26rpx;
		line-height: 32rpx;
	}

	.dn-goodsAttr {
		font-size: 22rpx;
		color: #888888;
		line-height: 32rpx;
		padding-top: 20rpx;
		word-break: break-all;
		overflow: hidden;
		text-overflow: ellipsis;
		display: -webkit-box;
		-webkit-box-orient: vertical;
		-webkit-line-clamp: 2;
	}

	.dn-priceRight {
		text-align: right;
		font-size: 24rpx;
		color: #888888;
		line-height: 30rpx;
		padding-top: 20rpx;
	}


	.dn-goodsPrice {
		width: 100%;
		display: flex;
		align-items: flex-end;
		justify-content: flex-end;
		font-size: 24rpx;
	}

	.dn-priceLarge {
		font-size: 32rpx;
		line-height: 30rpx;
		font-weight: 500;
	}

	.dn-orderBtn {
		width: 100%;
		display: flex;
		align-items: center;
		justify-content: flex-end;
		background: #fff;
		padding: 10rpx 30rpx 20rpx;
		box-sizing: border-box;
	}
