@import '/static/css/dnui.wxss';

.container {
  padding-bottom: 100rpx;
  box-sizing: border-box;
}

/*banner*/

.dn-banner-box {
  width: 100%;
  padding-top: 20rpx;
  box-sizing: border-box;
  background: #fff;
}

.dn-banner-swiper {
  width: 100%;
  height: 240rpx;
}

.dn-banner-item {
  padding: 0 16rpx;
  box-sizing: border-box;
}

.dn-slide-image {
  width: 100%;
  height: 240rpx;
  display: block;
  border-radius: 12rpx;
  /* transition: all 0.1s linear; */
}

.dn-banner-scale {
  transform: scaleY(0.9);
  transform-origin: center center;
}

.dn-banner-swiper .wx-swiper-dot {
  width: 8rpx;
  height: 8rpx;
  display: inline-flex;
  background: none;
  justify-content: space-between;
}

.dn-banner-swiper .wx-swiper-dot::before {
  content: '';
  flex-grow: 1;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 16rpx;
  overflow: hidden;
}

.dn-banner-swiper .wx-swiper-dot-active::before {
  background: #fff;
}

.dn-banner-swiper .wx-swiper-dot.wx-swiper-dot-active {
  width: 16rpx;
}

/*banner*/

/*headlines*/

.dn-rolling-news {
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-wrap: nowrap;
  background: #fff;
}

.dn-rolling-news::after {
  left: 0;
}

.dn-swiper {
  margin-left: 8rpx;
  font-size: 28rpx;
  height: 80rpx;
  flex: 1;
}

.dn-swiper-item {
  display: flex;
  align-items: center;
}

.dn-news-item {
  line-height: 28rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #555;
}

/*headlines*/

/*classify*/

.dn-classify-box {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 0;
  background-color: #fff;
}

.dn-classify-item {
  width: 20%;
  text-align: center;
}

.dn-classify-img {
  width: 88rpx;
  height: 88rpx;
}

.dn-classify-name {
  font-size: 26rpx;
  line-height: 26rpx;
  padding-top: 8rpx;
  color: #555;
  white-space: nowrap;
}

/*classify*/

/*spike*/

.dn-spike-box {
  background: #fff;
  margin-top: 20rpx;
}

.dn-spike-title {
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
}

.dn-spike-title::after {
  left: 0;
}

.dn-spike-swiper {
  min-height: 440rpx;
}

.dn-pro-item {
  display: flex;
  width: 100%;
  background: #fff;
  box-sizing: border-box;
  border-radius: 12rpx;
  position: relative;
}

.dn-pro-item::after {
  left: 240rpx;
}

.dn-pro-img {
  width: 180rpx;
  height: 180rpx;
  display: block;
  flex-shrink: 0;
  border-radius: 12rpx;
}

.dn-pro-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 20rpx;
}

.dn-pro-tit {
  color: #2e2e2e;
  font-size: 26rpx;
  word-break: break-all;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.dn-pro-btmbox {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.dn-sale-price {
  font-size: 34rpx;
  font-weight: 500;
  color: #e41f19;
}

.dn-factory-price {
  font-size: 24rpx;
  color: #a0a0a0;
  text-decoration: line-through;
  padding-left: 12rpx;
}

.dn-countdown {
  display: flex;
  align-items: center;
}

.dn-countdown-text {
  padding: 0 8rpx;
  font-size: 24rpx;
  line-height: 24rpx;
  color: #555;
}

