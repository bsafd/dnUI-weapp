@import '/static/css/dnui.wxss';

page {
  background: #fff !important;
}
.button-smsCode {
  width: 196rpx !important;
  height: 54rpx !important;
  border-radius: 27rpx !important;
  font-size: 28rpx !important;
  padding: 0 !important;
  line-height: 54rpx !important;
}
/*项目中这个样式可以写到 app.wxss start*/
.button-submit {
  margin-top: 100rpx;
  background: none;
  position: relative;
  padding: 0;
}

.button-inner {
  position: absolute;
  z-index: 2;
  display: block !important;
}

.dn-loginbox {
  width: 100%;
  box-sizing: border-box;
  position: relative;
  height:400rpx;
  border-radius: 100% 100% 100% 100% / 0% 0% 40% 40%;
}
.dn-loginfrom {
  width: 100%;
  padding: 80rpx 104rpx 0 104rpx;
  box-sizing: border-box;
}


.dn-input {
  font-size: 32rpx;
  width: 507rpx;
  display: inline-block;
  padding-left: 32rpx;
  box-sizing: border-box;
}

.dn-line-cell {
  padding: 27rpx 0;
  display: -webkit-flex;
  display: flex;
  -webkiit-align-items: center;
  align-items: center;
  position: relative;
}

.dn-line-cell::after {
  content: '';
  position: absolute;
  border-bottom: 1rpx solid #e0e0e0;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
  bottom: 0;
  right: 0;
  left: 0;
}

