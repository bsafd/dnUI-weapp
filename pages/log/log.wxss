@import '/static/css/dnui.wxss';

.container {
  overflow: hidden;
}

.dn-header {
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  color: #999;
  height: 54rpx;
  line-height: 54rpx;
  background: #fff8d5;
  display: flex;
  align-items: center;
  position: fixed;
  top: 0;
  z-index: 999999;
}

.dn-version {
  color: #f54f46;
  font-weight: bold;
}

.dn-log {
  padding: 84rpx 80rpx 30rpx 40rpx;
  box-sizing: border-box;
}

.dn-node {
  padding: 10rpx 0;
}

.dn-content-log {
  border-radius: 10rpx;
  position: relative;
  padding: 20rpx 26rpx;
  font-size: 28rpx;
  color: var(--text-common);
  background: var(--primary);
  border: 1rpx solid var(--primary);
  display: inline-block;
}

.dn-content-log::before {
  content: "";
  position: absolute;
  width: 0;
  height: 0;
  top: 14rpx;
  border: 16rpx solid;
  right: 100%;
  border-color: transparent var(--primary) transparent transparent;
}

.dn-log-gray {
  background: var(--light) !important;
  border: 1rpx solid var(--light) !important;
  color: #999 !important;
}

.dn-log-gray::before {
  border-color: transparent var(--light) transparent transparent !important;
}

.dn-version-date {
  font-size: 32rpx;
  font-weight: bold;
  padding-bottom: 20rpx;
}

.dn-doc-box {
  padding-top: 20rpx;
  word-break: break-all;
}

.dn-link {
  padding-bottom: 20rpx;
  color: #06c;
}
