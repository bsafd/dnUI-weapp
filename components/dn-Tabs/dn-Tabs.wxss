.dn-tabs-view {
		width: 100%;
		box-sizing: border-box;
		display: flex;
		align-items: center;
		justify-content: space-between;
		z-index: 9999;
	}

	.dn-tabs-relative {
		position: relative;
	}

	.dn-tabs-fixed {
		position: fixed;
		left: 0;
	}

	.dn-tabs-fixed::before,
	.dn-tabs-relative::before {
		content: '';
		position: absolute;
		border-bottom: 1rpx solid #eaeef1;
		-webkit-transform: scaleY(0.5);
		transform: scaleY(0.5);
		bottom: 0;
		right: 0;
		left: 0;
	}

	.dn-unlined::before {
		border-bottom: 0 !important
	}

	.dn-tabs-item {
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.dn-tabs-disabled {
		opacity: .6;
	}

	.dn-tabs-title {
		display: flex;
		align-items: center;
		justify-content: center;
		position: relative;
		z-index: 2;
	}

	.dn-tabs-active {
		transition: all 0.15s ease-in-out;
	}

	.dn-tabs-slider {
		border-radius: 40rpx;
		position: absolute;
		left: 0;
		transition: all 0.15s ease-in-out;
		z-index: 0;
	}