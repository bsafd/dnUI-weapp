@import '/static/css/dnfont.wxss';

@font-face {
		font-family: 'dnUpload';
		src: url(data:application/font-woff;charset=utf-8;base64,) format('woff');
		font-weight: normal;
		font-style: normal;
	}
  .dn-imgPicker-icon {
		font-family: "dnUpload" !important;
		font-style: normal;
		-webkit-font-smoothing: antialiased;
		-moz-osx-font-smoothing: grayscale;
	}
	

.dn-imgPicker{
  width: 100%;
  display: grid;
  grid-column-gap: 10px;
  grid-row-gap: 10px;
}
.dn-imgPickerItem{
  position: relative;
  border-radius: 5px;
}
.dn-imgPickerItem:after {
  content: "";
  display: block;
  margin-top: 100%;
}
.dn-imgPickerItemImage{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.dn-imgPickerItem.Add::before {
  content: '';
  border: 1px solid var(--border-sub);
  width: calc(100% - 2px);
  height: calc(100% - 2px);
  position: absolute;
  top: 0;
  left: 0;
}
.dn-imgPickerItem.Add text{
  width: 50px;
  height: 50px;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
  line-height: 50px;
  color: var(--text-hold);
  font-size: 30px;
}
.dn-imgPicker-addicon:before {
		content: "\e609";
	}
  
.dn-imgPickerItem .delete{
  width: 16px;
  height: 16px;
  line-height: 16px;
  text-align: center;
  color: #EB0909;
  position: absolute;
  font-size:16px;
  right: -12rpx;
	top: -12rpx;
  border-radius: 50%;
  z-index:444;
}
.dn-imgPickerItem .delete:before {
		content: "\e601";
	}
  
.dn-imgPickerItem .delete_hover{
  background: #000;
}



.dn-uploadmask {
		width: 100%;
		height: 100%;
		position: absolute;
		left: 0;
		top: 0;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: space-around;
		padding: 40rpx 0;
		box-sizing: border-box;
		background: rgba(0, 0, 0, 0.6);
	}

	.dn-uploadloading {
		width: 28rpx;
		height: 28rpx;
		border-radius: 50%;
		border: 2px solid;
		border-color: #B2B2B2 #B2B2B2 #B2B2B2 #fff;
		animation: dn-rotate 0.7s linear infinite;
	}

	@keyframes dn-rotate {
		0% {
			transform: rotate(0);
		}

		100% {
			transform: rotate(360deg);
		}
	}

	.dn-uploadtips {
		font-size: 26rpx;
		color: #fff;
	}

	.dn-uploadmask-btn {
		padding: 6rpx 16rpx;
		border-radius: 40rpx;
		text-align: center;
		font-size: 24rpx;
		color: #fff;
		border: 1rpx solid #fff;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.dn-uploadhover {
		opacity: 0.5;
	}