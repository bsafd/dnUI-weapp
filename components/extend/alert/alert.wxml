<view class="dn-alert-box {{show?'dn-alert-show':''}}">
  <view class="dn-alert-content" style="font-size:{{size}}rpx;color:{{color}}">
    <slot></slot>
  </view>
  <view class="dn-alert-btn" style="color:{{btnColor}}" hover-class="dn-alert-btn-hover" hover-stay-time="150" catchtap="handleClick">{{btnText}}</view>
</view>
<view class="dn-alert-mask {{show?'dn-alert-mask-show':''}}" catchtap="handleClickCancel"></view>