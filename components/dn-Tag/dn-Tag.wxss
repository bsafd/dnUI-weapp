/* color start*/

@import '/static/css/dncolor.wxss';
.bg-rgba {
  background: rgba(0, 0, 0, 0.7);
}
/* dn-tag */
.dn-tag {padding:16rpx 26rpx;font-size:28rpx;border-radius:6rpx;display:inline-block;line-height:28rpx;}
.dn-tag-xs {padding:4rpx 8rpx;font-size:20rpx;border-radius:4rpx;display:inline-block;line-height:20rpx;}
.dn-tag-sm {padding:10rpx 14rpx;font-size:22rpx;border-radius:6rpx;display:inline-block;line-height:24rpx;}
.dn-tag-outline {position:relative;background:none;color:var(--primary);}
.dn-tag-outline::after {content:"";position:absolute;width:200%;height:200%;-webkit-transform-origin:0 0;transform-origin:0 0;-webkit-transform:scale(0.5,0.5);transform:scale(0.5,0.5);-webkit-box-sizing:border-box;box-sizing:border-box;left:0;top:0;border-radius:20rpx;border:1px solid var(--primary);}
.dn-tag-outline-round::after {border-radius:80rpx;}
.dn-tag-round-left {border-radius:50rpx 0 0 50rpx;}
.dn-tag-round-right {border-radius:0 50rpx 50rpx 0;}
.dn-tag-round-left.dn-tag-outline::after {border-radius:100rpx 0 0 100rpx;}
.dn-tag-round-right.dn-tag-outline::after {border-radius:0 100rpx 100rpx 0;}
.dn-tag-circle,
.dn-tag-circle::after{border-radius: 100px !important;}
.dn-tag-border{border:2rpx solid rgba(250, 125, 125, 0.25);}